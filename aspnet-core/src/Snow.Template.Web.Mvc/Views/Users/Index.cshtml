@using Abp.Authorization.Users
@using Snow.Template.Web.Startup
@{
    ViewData["Title"] = PageNames.Users;
    Layout = "_LayoutPageTable";
    ViewBag.AbsoluteUrl = "/Users";
    ViewBag.CurrentPageName = PageNames.Users; // The menu item will be active for this page.
}
@section scripts
    {
    <environment names="Development">

        <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-file-upload/js/vendor/jquery.ui.widget.js"></script>
        <script src="~/lib/jquery-file-upload/js/jquery.fileupload.js"></script>
        <script src="~/view-resources/Views/Users/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Users/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<div id="toolbar">
    <div class="btn-group" role="group" aria-label="Operate Group">
        @if (IsGranted("Pages.Administration.Users.Create"))
        {
            <button id="create" type="button" class="btn btn-primary"><i class="fas fa-plus"></i>@L("Add")</button>
        }
    </div>
</div>
<!--搜索-->
<div class="card">
    <div class="card-header">
        @L("QueryCondition")
    </div>
    <div class="card-body">
        <form id="formSearch" class="form-inline">
            <label class="sr-only" for="txt_search_name">@L("UserName")</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="txt_search_name" placeholder=@L("UserName")>
        </form>
    </div>
</div>