@using Snow.Template.Web.Startup
@{
    ViewData["Title"] = PageNames.Tenants;
    Layout = "_LayoutPageTable";
    ViewBag.AbsoluteUrl = "/Tenants";
    ViewBag.CurrentPageName = PageNames.Tenants; // The menu item will be active for this page.
}
@section styles
{
    <link href="~/lib/iCheck/skins/square/blue.css" rel="stylesheet" asp-append-version="true" />
}

@section scripts
    {
    <environment names="Development">
        <script src="~/lib/iCheck/icheck.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Tenants/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/lib/iCheck/icheck.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Tenants/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<div id="toolbar">
    <div class="btn-group" role="group" aria-label="Operate Group">
        @if (IsGranted("Pages.Administration.Tenants.Create"))
        {
            <button id="create" type="button" class="btn btn-primary"><i class="fas fa-plus"></i>@L("Add")</button>
        }
    </div>
</div>